{
    "name": "dotnet-script",
    "displayName": "dotnet-script",
    "description": "Provides simple tooling when working with dotnet-script",
    "version": "0.0.1",
    "publisher": "dotnet-script",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/*.csx"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.dotnetScriptInstallPackage",
                "title": "Install NuGet package",
                "category": "dotnet-script"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "@types/node-fetch": "^1.6.7",
        "node-fetch": "^1.7.3",
        "tslint-microsoft-contrib": "^5.0.1",
        "tslint-no-unused-expression-chai": "0.0.3"
    }
}
